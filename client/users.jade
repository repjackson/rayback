template(name='user_contact')
    .ui.center.aligned.header 
        i.contact.icon
        | contact
    .ui.form
        .field
            label message
            textarea(rows='3')
    +user_contact_info
    +user_messages
    
            
            
template(name='user_contact_info')
    .shadowed-box
        .ui.header
            +i name='phone'
            |contact
        .ui.icon.circular.button.toggle_edit
            if is_editing
                i.green.checkmark.icon
            else 
                i.blue.pencil.icon
        .ui.list
            if profile.phone
                .item
                    a(href="tel:#{profile.phone}") 
                        i.phone.icon
                        |#{profile.phone}
            if profile.website
                .item 
                    a(href=profile.website target='_blank') 
                        |#{profile.website}
                        i.external.icon
            .item created {{ from_now createdAt }}
        if is_editing
            +user_field key='street' label='Street'
            +user_field key='city' label='City'
            +user_field key='state' label='State'
            +user_field key='zip' label='Zip'
        else
            .ui.list
                .item #{street}
                .item #{city}
                .item #{state}
                .item #{zip}
            
            
